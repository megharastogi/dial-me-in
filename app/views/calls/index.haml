.center.hero-unit

	%h1 Listing calls

	%table
		%tr
			%th Time
			%th
			%th
			%th

		- @calls.each do |call|
			%tr
				%td= call.time
				%td= link_to 'Show', call, class: "btn btn-small btn-primary"
				%td= link_to 'Edit', edit_call_path(call), class: "btn btn-small"
				%td= link_to 'Destroy', call, :confirm => 'Are you sure?', :method => :delete, class: "btn btn-small btn-danger"
	%br

	= link_to 'New Call', new_call_path